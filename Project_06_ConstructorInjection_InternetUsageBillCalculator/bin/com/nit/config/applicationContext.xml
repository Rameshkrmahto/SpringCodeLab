<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans 
                        http://www.springframework.org/schema/beans/spring-beans.xsd">

   
    <bean id="datauDeatils" class="com.nit.sbeans.DataUsageDetails">
    
       <constructor-arg name="dataInGB" value="12"/>
       <constructor-arg name="costPerGB" value="33"/>
       
        
  
    </bean>
    <bean id="iuBill" class="com.nit.sbeans.InternetUsageBillCalculator">
    
       <constructor-arg name="dataUsageDetails" ref="datauDeatils"/>
       <constructor-arg name="fixedMonthlyCharge" value="45" />
      
  
    </bean>
</beans>